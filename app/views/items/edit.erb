<body class="red-text text-lighten-2">
<center>
<h1 style="font-size:50px; font-family:impact">EDIT</h1>
</center>

<div class="card-panel"> 
  <form action="/items/<%= @item.id %>" method="post">
    <input type="hidden" name="_method" value ="patch">
    <br>
    <div>
        <label for="name">NAME:</label>
        <input type="text" name="item[name]" id="name" value="<%= @item.name %>" size="50">
    </div>
    <br>
    <div>
        <label for="brand">BRAND:</label>
        <input type="text" name="item[brand]" id="brand" value="<%= @item.brand %>" size="50">
    </div>
    <br>
    <div>
        <label for="price">PRICE: $ </label>
        <input type="text" name="item[price]" id="price" value="<%= @item.price %>" size="5">
    </div>
    <br>
    <div>
        <label for="link">ADD A LINK</label>
        <input type="url" name="item[link]" id="link" value="<%= @item.link %>" size="100">
    </div>
    <br>
        <center>
        <input type="submit" value="UPDATE ITEM">
        </center>
  </form>
  </div>
</body>