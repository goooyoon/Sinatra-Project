<h1>Edit <%= @item.name %></h1>

<form action="/items/:id" method="post">
<input type="hidden" name="_method" value ="patch">
<br>
<br>
<div>
<label for="name">Item Name</label>
<input type="text" name="item" id="item" size="50">
</div>
<br>
<br>
<div>
<label for="description">Description</label>
<input type="text" name="description" id="description" size="50">
</div>
<br>
<br>
<div>
<label for="link">Add a link for image reference</label>
<input type="url" name="image_link" id="image_link" size="100">
</div>

<br>

<input type="submit" value="Create Item">
</form>