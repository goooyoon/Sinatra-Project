<body>
    <center>
        <h1 style="color:white; font-size:50px; font-family:impact">CREATE ITEM</h1>
    </center>
<div class="card-panel">  
   <form action="/items" method="post">
    <br>
        <div>
            <label for="name">NAME:</label><input type="text" name="item[name]" id="name" value="<%= @item.name %>">
        </div>
    <br>
        <div>
            <label for="brand">BRAND:</label>
            <input type="text" name="item[brand]" id="brand" value="<%= @item.brand %>">
        </div>
    <br>
        <div>
            <label for="price">PRICE:</label>
            <input type="text" name="item[price]" id="price" value="$<%= @item.price %>">
        </div>
    <br>
        <div>
            <label for="link">ADD A LINK</label>
            <input type="url" name="item[link]" id="link" value="<%= @item.link %>">
        </div>
    <br>
     <center>
        <input type="submit" value="CREATE ITEM">
     </center>
   </form>
  </div>  
</body>