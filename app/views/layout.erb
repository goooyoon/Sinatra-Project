    <title>INSTYLECART</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
      <!-- navigation -->
      <nav>
        <ul>
          <% unless logged_in? %>
            <li><a href="/signup">Create Account</a></li>
            <li><a href="/login">Login</a></li>
          <% else %>
            <li><%= current_user.username %></li>
            <li><a href="/logout">Logout</a></li>
          <% end %>
        </ul>
      </nav>
        <body class="background-color:lightyellow">
    <!-- end navigation -->
      
       <!-- error messages -->
        <% if flash[:error] %>
          <% flash[:error].each do |error| %>
            <div>
              <%= error %>
            </div>
          <% end %>
        <% end %>
        <% if flash[:notice] %>
          <div>
            <%= flash[:notice] %>
          </div>
        <% end %>
      <!--  end error messages -->

    <div class="container" style="font-family:verdana">
      <%= yield %>
    </div>
       
        <!-- footer -->
        <footer class="branding">
            <small>&copy; 2020 <strong>Grace Kim</strong></small>
        </footer>

